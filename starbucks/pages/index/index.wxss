.backgroud-pic{
  width: 750rpx;
  height: 600rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}
.backgroud-pic image{
  width: 750rpx;
  height: 600rpx;
}
.wrapper{
  box-sizing: border-box;
  height: 3000rpx;
  width: 750rpx;
  padding: 0 30rpx;
  background-color: #f6f6f6;
  border-radius: 60rpx;
  top: 440rpx;
  position: absolute;
}
.head-pic{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 8rpx solid #ffffff;
  position: absolute;
  top: -90rpx;
  box-shadow: 0 0 20rpx #d6d6d6;
}
.head-pic image{
  width: 160rpx;
  height: 100%;
} 
.card-left{
  border-radius: 30rpx;
  overflow: hidden;
  width: 330rpx;
  height: 580rpx;
  display: inline-block;
  margin-top: 180rpx;
  box-shadow: 0 0 20rpx #d6d6d6;
}

.card-right{
  margin-left: 30rpx;
  border-radius: 30rpx;
  width: 330rpx;
  height: 580rpx;
  display: inline-block;
  margin-top: 180rpx;
}
.card-right__top,
.card-right__down{
  width: 330rpx;
  height: 280rpx;
  border-radius: 30rpx;
  overflow: hidden; 
  box-shadow: 0 0 20rpx #d6d6d6;
}
.card-right__top{
  margin-bottom: 20rpx;
}
.card-left image{
  width: 330rpx;
  height: 100%;
}
.card-right image{
  width: 330rpx;
  height: 280rpx;
}

swiper{
  margin-top: 80rpx;
  width: 690rpx;
}
.slide-image{
  width: 690rpx;
  height: 100%;
}
.present-title{
  width: 100%;
  font-size: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 100rpx 0 0 0;
}
.present-desc{
  width: 100%;
  color: #676767;
  font-size: 28rpx;
}